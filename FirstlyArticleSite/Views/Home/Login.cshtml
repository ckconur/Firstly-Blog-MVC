@model string
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="card col-xl-6 mt-5 p-4">
        <form>
            <div class="mb-3 form-group">
                <label for="mail">Email Adresiniz</label>
                <input type="email" class="form-control" name="mail" id="mail" placeholder="example@mail.com" />
            </div>
            <div class="d-grid">
                <button class="btn btn-dark" type="submit">Gönder</button>
            </div>
        </form>

        @if (Model != null)
        {
            <div class="alert alert-success d-flex align-items-center mt-3" role="alert">
                <div>
                    @Model
                </div>
            </div>
        }
    </div>
</div>

